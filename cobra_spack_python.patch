 etc/spack/packages.yaml | 29 +++++++++++++++++++++++++++++
 1 file changed, 29 insertions(+)
 create mode 100644 etc/spack/packages.yaml

diff --git a/etc/spack/packages.yaml b/etc/spack/packages.yaml
new file mode 100644
index 0000000000..ba37c8f089
--- /dev/null
+++ b/etc/spack/packages.yaml
@@ -0,0 +1,29 @@
+packages:
+  python:
+    buildable: False
+    externals:
+    - spec: python@3.7.6
+      modules:
+      - anaconda/3/2020.02
+
+  py-numpy:
+    # for some reason, buildable: False is not working with paths, only with modules 
+    buildable: False
+    externals:
+    - spec: py-numpy@1.18.1
+      modules:
+      - anaconda/3/2020.02
+
+  py-scipy:
+    buildable: False
+    externals:
+    - spec: py-scipy@1.4.1
+      modules:
+      - anaconda/3/2020.02
+
+  py-setuptools:
+    buildable: False
+    externals:
+    - spec: py-setuptools@45.2.0.post20200210
+      modules:
+      - anaconda/3/2020.02
